---
/**
 * @fileoverview Version support page for each locale
 * @author ESLint
 */
import MainLayout from "../../layouts/MainLayout.astro";
import type { Locale } from "../../i18n";
import { locales, getSiteData } from "../../i18n";

export function getStaticPaths() {
	return locales.map(locale => ({
		params: { locale },
	}));
}

const { locale } = Astro.params as { locale: Locale };
const site = getSiteData(locale);

const homepage = site.homepage as {
	versions: { version_support: string };
};
---

<MainLayout title={homepage.versions.version_support} locale={locale} hook="version_support_page">
	<section class="section hero">
		<div class="content-container">
			<div class="section-head">
				<h1 class="section-title">{homepage.versions.version_support}</h1>
			</div>
		</div>
	</section>

	<section class="section">
		<div class="content-container">
			<p>Version support information will be migrated in a future update.</p>
		</div>
	</section>
</MainLayout>
