---
/**
 * @fileoverview Main layout with header and footer
 * @author ESLint
 */
import type { Locale } from "../i18n";
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
	description?: string;
	locale: Locale;
	hook?: string;
	hideFooter?: boolean;
}

const { title, description, locale, hook = "page", hideFooter = false } = Astro.props;
---

<BaseLayout
	title={title}
	description={description}
	locale={locale}
	hook={hook}
>
	<Header locale={locale} />

	<main id="main" tabindex="-1">
		<slot />
	</main>

	{!hideFooter && <Footer locale={locale} />}
</BaseLayout>
